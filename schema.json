{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "persons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "phone": {
            "type": "string",
            "pattern": "^[0-9]{3,16}$"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "address": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "phone", "email", "address"]
      }
    }
  },
  "required": ["persons"]
}
